# CareerConnect Application Configuration Template
# Copy this file to application.properties and fill in your actual values

# Application Configuration
spring.application.name=careerconnect
server.port=8080

# Database Configuration
spring.data.mongodb.uri=mongodb://localhost:27017/careerconnect
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/careerconnect

# JWT Configuration
jwt.secret=your-secret-key-here
jwt.expiration=86400000

# Email Configuration (for notifications)
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=your-email@gmail.com
spring.mail.password=your-app-password
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# Logging
logging.level.com.jobportal=INFO
logging.level.org.springframework.security=DEBUG