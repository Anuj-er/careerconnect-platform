# Production Environment Configuration Template
# Copy this to application-prod.properties for production deployment

# Production Database (MongoDB Atlas or production MongoDB instance)
spring.data.mongodb.uri=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/careerconnect

# Production JWT (use a strong, randomly generated secret)
jwt.secret=${JWT_SECRET:your-production-secret-here}
jwt.expiration=86400000

# Production Email Configuration
spring.mail.host=${MAIL_HOST:smtp.gmail.com}
spring.mail.port=${MAIL_PORT:587}
spring.mail.username=${MAIL_USERNAME:your-production-email}
spring.mail.password=${MAIL_PASSWORD:your-app-password}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# Production Logging (less verbose)
logging.level.com.jobportal=INFO
logging.level.org.springframework.security=WARN
logging.level.org.springframework.web=WARN

# Production Server Configuration
server.port=${PORT:8080}
server.servlet.context-path=/api